<?xml version="1.0" encoding="utf-8"?>
<navigation
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_graph"
  app:startDestination="@id/list_fragment">

  <fragment
    android:id="@+id/list_fragment"
    android:name="edu.cnm.deepdive.apod.controller.ListFragment"
    android:label="@string/app_name"
    tools:layout="@layout/fragment_list">

    <action
      android:id="@+id/display_image"
      app:destination="@id/image_fragment"/>

    <action
      android:id="@+id/display_video"
      app:destination="@id/video_fragment"/>

    <action
      android:id="@+id/display_info"
      app:destination="@id/info_fragment"/>

  </fragment>

  <fragment
    android:id="@+id/image_fragment"
    android:name="edu.cnm.deepdive.apod.controller.ImageFragment"
    tools:layout="@layout/fragment_image">

    <action
      android:id="@+id/display_info"
      app:destination="@id/info_fragment"/>

  </fragment>

  <fragment
    android:id="@+id/video_fragment"
    android:name="edu.cnm.deepdive.apod.controller.VideoFragment"
    tools:layout="@layout/fragment_video">

    <action
      android:id="@+id/display_info"
      app:destination="@id/info_fragment"/>

  </fragment>

  <dialog
    android:id="@+id/info_fragment"
    android:name="edu.cnm.deepdive.apod.controller.InfoFragment"
    tools:layout="@layout/fragment_info"/>

</navigation>